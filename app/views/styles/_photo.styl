	.photo-container
		height inherit
		line-height 320px
		position relative
		overflow hidden
		width inherit

		img
			height 100%
			width 100%
			position absolute
			top 0
			left 0

	footer
		background #fff
		color #000
		font-size 16px
		height 60px
		overflow hidden
		padding 10px
		width 100%

		h3
			font-size 16px
			line-height 16px
			margin 0

		p
			color #999
			font-size 12px
			line-height 12px
			margin 4px 0 0

		.actions
			display block
			margin 12px 0 0

			a
				display inline-block
				font-size 12px
				margin-right 10px

